{
  "manifest_version": 3,
  "name": "Show LINE Sticker URL",
  "version": "1.0",
  "description": "LINE スタンプを画像をクリックすると URL を表示する",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://store.line.me/stickershop/product/*",
        "https://store.line.me/emojishop/product/*"
      ],
      "css": ["daisyui.css"],
      "js": ["dist/content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "128": "icon128.png"
  }
}
